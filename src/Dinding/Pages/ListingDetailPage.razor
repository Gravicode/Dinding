                        <ul class="detail-gallery-index">
                            @foreach (var picUrl in ListingItem.ImageUrls.Split(';'))
                            {
                                <li class="detail-gallery-list-item active"><a data-target="@picUrl"><img src="@picUrl" alt=""> </a> </li>
