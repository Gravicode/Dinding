                                <li><a href="www.facebook.com/@(ListingItem.User.FBUrl)"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="www.twitter.com/@(ListingItem.User.TwitterUrl)"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="www.linkedin.com/@(ListingItem.User.LinkedIdUrl)"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                        </div>
                        <div class="dlt-com-lt-text">
                            <div class="dlt-com-lt-title">@ListingItem.User.FullName</div>
                            <div class="dlt-com-clt">@ListingItem.User.Pekerjaan</div>
                            <p>@ListingItem.User.AboutMe</p>
                        </div>
                    </div>
                </div>
                <div class="comments-wrapper">
                    <h2>@ListComment.Count().ToString("n0") Comments</h2>
